interface Props {
  name: IconName;
  class?: string;
  size?: '2xs' | 'xs' | 'sm' | 'md' | 'lg';
}

const { name, class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  '2xs': 'w-3.5 h-3.5',
  xs: 'w-4 h-4',
  sm: 'w-5 h-5',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
};

const sizeClass = sizeClasses[size];
const icon = icons[name];

// Runtime validation - throw in both dev and prod to fail fast
if (!icon) {
  throw new Error(`[Icon] Invalid icon name: "${name}". Available icons: ${Object.keys(icons).join(', ')}`);
}

const iconPath = icon.path;
const isFilled = icon.filled;

const SVG_PATH_PATTERN = /^<path[\s\S]*\/>$/;

if (!SVG_PATH_PATTERN.test(iconPath)) {
  throw new Error(`[Icon] Invalid SVG path definition for icon: "${name}"`);
}

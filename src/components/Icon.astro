---
/**
 * Icon component - reusable SVG icon renderer
 * Supports icons from Heroicons (outline style)
 */
interface Props {
  name: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { name, class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-12 h-12',
};

const sizeClass = sizeClasses[size];
---

{name === 'code-bracket' && (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class:list={[sizeClass, className]}
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
    />
  </svg>
)}

{name === 'square-3-stack-3d' && (

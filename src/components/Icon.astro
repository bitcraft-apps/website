export type IconName = keyof typeof icons;

interface Props {
  name: IconName;
  class?: string;
  size?: 'xs' | 'sm' | 'md' | 'lg';
}

const { name, class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  xs: 'w-4 h-4',
  sm: 'w-5 h-5',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
};

const sizeClass = sizeClasses[size];
const icon = icons[name];

// Runtime validation in development mode
if (import.meta.env.DEV && !icon) {
  console.warn(`[Icon] Unknown icon name: "${name}". Available icons: ${Object.keys(icons).join(', ')}`);
}

const isFilled = icon?.filled ?? false;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  fill={isFilled ? 'currentColor' : 'none'}
  viewBox="0 0 24 24"
  stroke-width={isFilled ? undefined : '1.5'}
  stroke={isFilled ? undefined : 'currentColor'}
  class:list={[sizeClass, className]}
  aria-hidden="true"
  set:html={icon?.path}

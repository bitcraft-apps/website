---
import { SITE_TITLE, CONTACT, DEFAULT_OG_IMAGE, LOGO_IMAGE, BRAND_COLOR } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = DEFAULT_OG_IMAGE } = Astro.props;

// Use Astro's site config with fallback for local development
const siteUrl = import.meta.env.SITE || 'http://localhost:4321';

// Warn if site URL is missing in production (would break SEO)
if (!import.meta.env.SITE && import.meta.env.PROD) {
  console.warn('⚠️ No site URL configured in astro.config.mjs - SEO tags will use localhost');
}
const canonicalURL = new URL(Astro.url.pathname, siteUrl).href;
const ogImageURL = new URL(image, siteUrl).href;

// JSON-LD structured data for Organization and WebSite
const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      '@id': `${siteUrl}/#organization`,
      name: SITE_TITLE,
      url: siteUrl,
      logo: new URL(LOGO_IMAGE, siteUrl).href,
      sameAs: [CONTACT.github],
    },
    {
      '@type': 'WebSite',
      '@id': `${siteUrl}/#website`,
      url: siteUrl,
      name: SITE_TITLE,
      publisher: { '@id': `${siteUrl}/#organization` },
    },
  ],
};
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />
<meta name="theme-color" content={BRAND_COLOR} />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="robots" content="index, follow" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:locale" content="en_US" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- Twitter Card -->
<!-- TODO: Add twitter:site and twitter:creator when official handles are available -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageURL} />
<meta name="twitter:image:alt" content={`${SITE_TITLE} - ${title}`} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

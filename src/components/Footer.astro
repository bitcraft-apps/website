---
/**
 * Footer component with navigation, social links, and copyright
 * - Dark theme using near-black background
 * - Responsive layout: stacked on mobile, 3-column grid on desktop
 */
import Logo from './Logo.astro';
import { NAV_ITEMS, CONTACT } from '../consts';
import { isActive } from '../utils/navigation';

const currentPath = Astro.url.pathname;

interface SocialLink {
  href: string;
  label: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  {
    href: CONTACT.github,
    label: 'GitHub',
    icon: 'github',
  },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-near-black text-off-white border-t border-olive-drab">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Branding & Copyright -->
      <div class="space-y-4">
        <a href="/" class="inline-block">
          <Logo variant="mono-white" class="h-8 w-auto" />
        </a>
        <p class="text-sm text-off-white/70">
          &copy; {currentYear} Bitcraft
        </p>
      </div>

      <!-- Quick Navigation Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Quick Links</h3>
        <nav aria-label="Footer navigation">
          <ul class="space-y-2">
            {
              NAV_ITEMS.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class:list={[
                      'transition-colors duration-200',
                      isActive(item.href, currentPath)
                        ? 'text-white font-semibold'
                        : 'text-off-white/70 hover:text-white',
                    ]}
                    aria-current={isActive(item.href, currentPath) ? 'page' : undefined}
                  >
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Connect</h3>
        <div class="flex space-x-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-off-white/70 hover:text-white transition-colors duration-200"
                aria-label={link.label}
              >
                {link.icon === 'github' && (
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>

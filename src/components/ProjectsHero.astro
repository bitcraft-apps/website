---
/**
 * ProjectsHero component - hero section for the projects listing page
 * Features File system / IDE themed decorations
 */
import Icon from './Icon.astro';

interface Props {
  projectCount?: number;
}

const { projectCount } = Astro.props;
---

<section
  aria-labelledby="projects-headline"
  class="relative overflow-hidden py-20 sm:py-28 bg-gradient-to-br from-off-white via-white to-off-white dark:from-near-black dark:via-near-black dark:to-near-black"
>
  <!-- Decorative background: File system / IDE theme -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <!-- Dot matrix pattern (like IDE minimap) -->
    <div class="absolute inset-0 bg-[radial-gradient(rgba(107,142,35,0.08)_1px,transparent_1px)] dark:bg-[radial-gradient(rgba(107,142,35,0.15)_1px,transparent_1px)] bg-[size:20px_20px]" />

    <!-- File tree decoration - left side (illustrative, not reflecting actual project structure) -->
    <div class="absolute top-1/4 left-8 sm:left-16 lg:left-24 text-olive-drab/15 dark:text-olive-drab/25 font-mono text-sm hidden md:block space-y-1">
      <div class="flex items-center gap-2">
        <Icon name="folder" size="sm" />
        <span>projects/</span>
      </div>
      <div class="flex items-center gap-2 ml-4">
        <span class="text-xs">├──</span>
        <Icon name="document" size="xs" />
        <span>project-001</span>
      </div>
      <div class="flex items-center gap-2 ml-4">
        <span class="text-xs">├──</span>
        <Icon name="document" size="xs" />
        <span>project-002</span>
      </div>
      <div class="flex items-center gap-2 ml-4">
        <span class="text-xs">└──</span>
        <Icon name="document" size="xs" />
        <span>project-003</span>
      </div>
    </div>

    <!-- IDE-like line numbers - right side -->
    <div class="absolute top-1/3 right-8 sm:right-16 lg:right-24 text-olive-drab/10 dark:text-olive-drab/20 font-mono text-xs hidden lg:block text-right leading-loose">
      <div>01</div>
      <div>02</div>
      <div>03</div>
      <div>04</div>
      <div>05</div>
    </div>

    <!-- Gradient orbs (softer, for depth) -->
    <div class="absolute top-0 -right-32 w-64 h-64 bg-forest-green/5 dark:bg-forest-green/10 rounded-full blur-3xl animate-pulse-slow" />
    <div class="absolute bottom-0 -left-32 w-80 h-80 bg-olive-drab/5 dark:bg-olive-drab/10 rounded-full blur-3xl animate-pulse-slow animation-delay-2000" />
  </div>

  <!-- Main content -->
  <div class="relative z-10 text-center max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Project count badge (hidden when no projects) -->
    {projectCount !== undefined && projectCount > 0 && (
      <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 bg-forest-green/10 border border-forest-green/20 rounded-full text-forest-green text-sm font-medium">
        <span class="w-2 h-2 bg-forest-green rounded-full" />
        {projectCount} {projectCount === 1 ? 'Project' : 'Projects'}
      </div>
    )}

    <h1
      id="projects-headline"
      class="text-4xl sm:text-5xl lg:text-6xl font-semibold text-dark-olive dark:text-off-white mb-6"
    >
      Our Work
    </h1>

    <p class="text-lg sm:text-xl text-near-black dark:text-off-white/80 max-w-2xl mx-auto leading-relaxed">
      A portfolio of web experiences and tools we've crafted.
    </p>
  </div>
</section>

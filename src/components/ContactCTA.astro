---
/**
 * ContactCTA component - Centered card encouraging visitors to get in touch
 * Used as final section on homepage
 */
import { CONTACT } from '../consts';
import Icon from './Icon.astro';
import Button from './Button.astro';
---

<section
  aria-labelledby="contact-cta-heading"
  class="py-20 sm:py-28 bg-gradient-to-b from-off-white to-white"
>
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="relative bg-white rounded-2xl p-10 sm:p-14 shadow-xl shadow-olive-drab/10 border border-olive-drab/10 text-center overflow-hidden"
    >
      <!-- Background decorations -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div
          class="absolute top-0 left-0 w-40 h-40 bg-gradient-to-br from-forest-green/5 to-transparent rounded-full -translate-x-1/2 -translate-y-1/2"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-60 h-60 bg-gradient-to-tl from-olive-drab/5 to-transparent rounded-full translate-x-1/3 translate-y-1/3"
        >
        </div>

        <!-- Code motif -->
        <div class="absolute top-6 right-8 text-olive-drab/5 font-mono text-sm hidden sm:block">
          &lt;collaborate/&gt;
        </div>
      </div>

      <!-- Content -->
      <div class="relative z-10">
        <!-- Icon -->
        <div
          class="inline-flex items-center justify-center w-16 h-16 mb-6 rounded-full bg-gradient-to-br from-forest-green/10 to-olive-drab/10"
        >
          <Icon name="chat-bubble" size="lg" class="text-forest-green" />
        </div>

        <h2 id="contact-cta-heading" class="text-3xl sm:text-4xl font-bold text-dark-olive mb-4">
          Let's Build Something Together
        </h2>

        <p class="text-near-black/70 text-lg mb-8 max-w-xl mx-auto leading-relaxed">
          Have a project in mind? We'd love to hear about it. Get in touch and let's explore how we
          can help bring your ideas to life.
        </p>

        <!-- CTA Button -->
        <Button href="/contact" variant="primary" icon="arrow-right">
          Start a Conversation
        </Button>

        <!-- Secondary contact option -->
        <p class="mt-6 text-sm text-olive-drab">
          Or email us directly at
          <a
            href={`mailto:${CONTACT.email}`}
            class="text-forest-green hover:text-dark-olive underline transition-colors"
          >
            {CONTACT.email}
          </a>
        </p>
      </div>
    </div>
  </div>
</section>

---
/**
 * Contact page with contact form and alternative contact methods
 * - Two-column layout on desktop, stacked on mobile
 * - Formspree integration for form submission
 * - Social links and email for alternative contact
 * - Legal info section with European TAX ID
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";

interface SocialLink {
  href: string;
  label: string;
  icon: "github" | "email";
}

const socialLinks: SocialLink[] = [
  {
    href: "https://github.com/bitcraft-apps",
    label: "GitHub",
    icon: "github",
  },
  {
    href: "mailto:szymon@graczyk.dev",
    label: "szymon@graczyk.dev",
    icon: "email",
  },
];

const legalInfo = {
  taxId: "PL6422997504",
  registryUrl: "https://aplikacja.ceidg.gov.pl/CEIDG/CEIDG.Public.UI/Search.aspx",
};
---

<BaseLayout 
  title="Contact | Bitcraft" 
  description="Get in touch with Bitcraft. Have a project in mind or questions about my services? Send a message and I'll get back to you soon."
>
  <section aria-labelledby="contact-heading" class="py-8 sm:py-12">
    <!-- Page Header -->
    <div class="mb-10 sm:mb-12">
      <h1 
        id="contact-heading" 
        class="text-4xl sm:text-5xl font-bold text-dark-olive mb-4"
      >
        Get in Touch
      </h1>
      <p class="text-lg text-near-black/80 max-w-2xl">
        Have a project in mind or want to discuss how we can work together? 
        Fill out the form below and I'll get back to you within 24-48 hours.
      </p>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-semibold text-dark-olive mb-6">
          Send a Message
        </h2>
        <ContactForm />
      </div>

      <!-- Alternative Contact Methods -->
      <div class="space-y-10">
        <!-- Connect Section -->
        <div>
          <h2 class="text-2xl font-semibold text-dark-olive mb-6">
            Other Ways to Connect
          </h2>
          <p class="text-near-black/80 mb-6">
            Prefer a different way to reach out? You can also contact me through these channels:
          </p>
          <ul class="space-y-4">
            {socialLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.icon === "github" ? "_blank" : undefined}
                  rel={link.icon === "github" ? "noopener noreferrer" : undefined}
                  class="inline-flex items-center text-dark-olive hover:text-forest-green transition-colors duration-200 group"
                >
                  {link.icon === "github" && (
                    <svg
                      class="h-6 w-6 mr-3 text-olive-drab group-hover:text-forest-green transition-colors duration-200"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  )}
                  {link.icon === "email" && (
                    <svg
                      class="h-6 w-6 mr-3 text-olive-drab group-hover:text-forest-green transition-colors duration-200"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                  )}
                  <span class="font-medium">{link.label}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Response Time Note -->
        <div class="p-6 bg-off-white rounded-lg border border-olive-drab/20">
          <h3 class="text-lg font-semibold text-dark-olive mb-2 flex items-center">
            <svg 
              class="h-5 w-5 mr-2 text-forest-green" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" 
              />
            </svg>
            Response Time
          </h3>
          <p class="text-near-black/70">
            I typically respond to inquiries within 24-48 hours during business days. 
            For urgent matters, please mention it in your message.
          </p>
        </div>

        <!-- Legal Info Section -->
        <div class="pt-6 border-t border-olive-drab/20">
          <h3 class="text-sm font-semibold uppercase tracking-wider text-dark-olive/70 mb-3">
            Business Information
          </h3>
          <dl class="space-y-2 text-sm text-near-black/70">
            <div class="flex items-start">
              <dt class="font-medium text-near-black min-w-[120px]">EU VAT ID:</dt>
              <dd class="font-mono">{legalInfo.taxId}</dd>
            </div>
            <div class="flex items-start">
              <dt class="font-medium text-near-black min-w-[120px]">Registry:</dt>
              <dd>
                <a 
                  href={legalInfo.registryUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-dark-olive hover:text-forest-green underline transition-colors duration-200"
                >
                  CEiDG (Polish Business Registry)
                </a>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
